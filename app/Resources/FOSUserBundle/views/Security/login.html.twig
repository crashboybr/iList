
{% trans_default_domain 'FOSUserBundle' %}

{% extends 'iListFrontendBundle::layout.html.twig' %}

{% block body %}


<div class="content-left">
	<h3>Digite seu login e senha</h3>
		
	<form action="{{ path("fos_user_security_check") }}" method="post">
	    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

	    {% if error %}
			<div class="alert">
				<p class="alert-text">{{ error|trans }}</p>
			</div>
		{% endif %}

	    <div class="inputLabel">
	    	<input type="text" id="username" placeholder="digite seu email" name="_username" value="{{ last_username }}" required="required" />
		</div>
 
	    <div class="inputLabel">
	    	<input type="password" placeholder="digite sua senha" id="password" name="_password" required="required" />
		</div>

		<div class="space">                      
			<a href="#" class="link-generico">Esqueci minha senha</a><br/>
		</div>

	    <input type="hidden" id="remember_me" name="_remember_me" value="on" />

	    <input class="ButtonRegister" type="submit" id="_submit" name="_submit" value="Entrar">
	</form>
</div>

<div class="content-left">
	<h3 style="width: 320px; text-align: center; font-size: 30px; margin-top: 50%;">OU</h3>
</div>

<div class="content-right">
    <h3>Crie uma conta e comece agora.</h3>

        {% include "FOSUserBundle:Registration:register_content.html.twig" %}

    	<p class="fconnect-text">ou cadastre-se com:</p>
        <a href="#" class="fconnect"></a>
    
</div>

{% endblock %}

