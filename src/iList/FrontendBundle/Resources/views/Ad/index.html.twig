{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Ad list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Userid</th>
                <th>Categoryid</th>
                <th>Subcategoryid</th>
                <th>Productid</th>
                <th>Size</th>
                <th>Color</th>
                <th>Title</th>
                <th>Content</th>
                <th>Price</th>
                <th>State</th>
                <th>City</th>
                <th>Zipcode</th>
                <th>Street</th>
                <th>Complement</th>
                <th>Status</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('anuncio_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.userId }}</td>
                <td>{{ entity.categoryId }}</td>
                <td>{{ entity.subcategoryId }}</td>
                <td>{{ entity.productId }}</td>
                <td>{{ entity.size }}</td>
                <td>{{ entity.color }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.content }}</td>
                <td>{{ entity.price }}</td>
                <td>{{ entity.state }}</td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.zipcode }}</td>
                <td>{{ entity.street }}</td>
                <td>{{ entity.complement }}</td>
                <td>{{ entity.status }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.slug }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('anuncio_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('anuncio_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('anuncio_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
