{% block body %}
<script>
$(document).ready(function () {
var $sport = $('#ilist_frontendbundle_ad_teste_category');
// When sport gets selected ...
$sport.change(function(){
  // ... retrieve the corresponding form.
  var $form = $(this).closest('form');
  // Simulate form data, but only include the selected sport value.
  var data = {};
  data[$sport.attr('name')] = $sport.val();
  // Submit data via AJAX to the form's action path.
  $.ajax({
    url : $form.attr('action'),
    type: $form.attr('method'),
    data : data,
    success: function(html) {
      // Replace current position field ...
      $('#ilist_frontendbundle_ad_teste_subcategory').replaceWith(
        // ... with the returned one from the AJAX response.
        $(html).find('#ilist_frontendbundle_ad_teste_subcategory')
      );
      $('#ilist_frontendbundle_ad_teste_color').replaceWith(
        // ... with the returned one from the AJAX response.
        $(html).find('#ilist_frontendbundle_ad_teste_color')
      );
      $('#ilist_frontendbundle_ad_teste_size').replaceWith(
        // ... with the returned one from the AJAX response.
        $(html).find('#ilist_frontendbundle_ad_teste_size')
      );
      $('#ilist_frontendbundle_ad_teste_screen').replaceWith(
        // ... with the returned one from the AJAX response.
        $(html).find('#ilist_frontendbundle_ad_teste_screen')
      );
      $('#ilist_frontendbundle_ad_teste_memory').replaceWith(
        // ... with the returned one from the AJAX response.
        $(html).find('#ilist_frontendbundle_ad_teste_memory')
      );
      $('#ilist_frontendbundle_ad_teste_processor').replaceWith(
        // ... with the returned one from the AJAX response.
        $(html).find('#ilist_frontendbundle_ad_teste_processor')
      );
      // Position field now displays the appropriate positions.
    }
  });
});

});
</script>

